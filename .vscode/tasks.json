// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan Install (Debug)",
            "type": "shell",
            "command": "conan install . --build=missing -s build_type=Debug",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure (conan-debug)",
            "type": "shell",
            "command": "cmake --preset conan-debug",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build (conan-debug)",
            "type": "shell",
            "command": "cmake --build --preset conan-debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
