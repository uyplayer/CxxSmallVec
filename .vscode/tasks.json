{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Conan Install",
      "type": "shell",
      "command": "${env:CONDA_PREFIX}/bin/conan",
      "args": [
        "install",
        ".",
        "--build=missing",
        "-s", "build_type=Debug"
      ],
      "problemMatcher": []
    },
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--preset", "conan-debug",
        "-DPython_EXECUTABLE=${env:CONDA_PREFIX}/bin/python"
      ],
      "problemMatcher": []
    },
    {
      "label": "CMake Build Install",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "--preset", "conan-debug",
        "--target", "install"
      ],
      "problemMatcher": []
    }
  ]
}
