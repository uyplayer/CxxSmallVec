{
    // ==================== CMake 配置 ====================
    "cmake.buildDirectory": "${workspaceFolder}/build/${buildType}",
    "cmake.buildArgs": [
        "--parallel"
    ],
    "cmake.configureOnOpen": true,
    "cmake.autoRestartBuild": true,
    "cmake.configureArgs": [
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
    ],

    // ==================== C/C++ 配置 ====================
    "C_Cpp.autocomplete": "default", // ✅ 启用智能补全
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools", // ✅ 推荐配置提供程序
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/${buildType}/compile_commands.json", // ✅ 动态路径
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.suggestSnippets": true,
    "C_Cpp.parameterHints": true,
    "C_Cpp.workspaceParsingPriority": "medium",

    // ==================== 语言配置 ====================
    "[cpp]": {
        "editor.wordBasedSuggestions": "allDocuments"
    },
    "[c]": {
        "editor.wordBasedSuggestions": "allDocuments"
    },

    // ==================== 文件关联 ====================
    "files.associations": {
        "*.py": "python",
        "*.cpp": "cpp",
        "*.h": "cpp",
        "stdexcept": "cpp",
        "type_traits": "cpp"
    },

    // ==================== 代码补全增强 ====================
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.suggestOnTriggerCharacters": true,
    "editor.parameterHints.enabled": true,
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnEnter": "on",

    // ==================== 其他配置 ====================
    "DockerRun.DisableDockerrc": true
}